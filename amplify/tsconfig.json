{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es2022"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "aws-lambda"
    ],
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    },
    "outDir": "./dist"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}